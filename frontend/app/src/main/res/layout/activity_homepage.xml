    <LinearLayout
        android:background="@color/white60"
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <com.example.androidapp.component.FocusButton
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:id="@+id/btn_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="关注"
            android:layout_weight="1"
            app:radius="5dp"
            app:text_color="@color/md_light_blue_400"
            app:border_color="@color/md_light_blue_400"
            ></com.example.androidapp.component.FocusButton>
        <com.example.androidapp.component.FocusButton
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:text_color="@color/md_light_blue_400"
            app:text_color_pressed="@color/md_light_blue_400"
            app:text="私聊"
            app:text_pressed="私聊"
            app:bg_color="@color/white"
            app:bg_color_pressed="@color/white"
            app:border_color="@color/md_light_blue_400"
            app:border_color_pressed="@color/md_light_blue_400"
            app:radius="5dp"></com.example.androidapp.component.FocusButton>
    </LinearLayout>

</RelativeLayout>
