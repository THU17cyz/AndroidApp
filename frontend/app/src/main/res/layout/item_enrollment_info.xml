<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    app:contentPaddingBottom="4dp"
    app:contentPaddingTop="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/shape_line"
        android:showDividers="middle"
        >

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorPrimary"
                android:id="@+id/text_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="研究方向"
                ></TextView>

            <TextView
                style="@style/personal_homepage_show_style"
                android:id="@+id/direction"
                android:textColor="?android:attr/textColorSecondary"
                android:text="量子力学"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招生类型"></TextView>

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本科生"
                android:id="@+id/student_type"></TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招生数量"></TextView>
            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/number"
                ></TextView>


        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意向状态"></TextView>

            <TextView
                style="@style/personal_homepage_show_style"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="进行中"
                android:id="@+id/state"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/personal_homepage_show_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="具体介绍"
                android:textColor="?android:attr/textColorPrimary"></TextView>

            <TextView
                style="@style/personal_homepage_show_style"
                android:id="@+id/introduction"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="具体介绍是xxx"></TextView>


