<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="0dp"
                android:orientation="vertical"
                android:divider="@drawable/shape_line"
                android:showDividers="middle"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="输入姓名"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="textPersonName"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:hint="编辑个性签名 (20字以内)"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLength="20"
                        android:id="@+id/edit_signature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"></TextView>
                    <TextView

                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/personal_homepage_edit_style"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="请选择"
                        android:id="@+id/choose_gender"
                        ></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:inputType="textPersonName"
                        android:hint="填写学校"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="院系"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:inputType="textPersonName"
                        android:hint="填写院系"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职务"></TextView>

                    <TextView
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="请选择"
                        android:id="@+id/choose_title"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:inputType="textPersonName"
                        android:hint="填写专业"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_major"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学位"></TextView>

                    <TextView
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/personal_homepage_edit_style"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="请选择"
                        android:id="@+id/choose_degree"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_teacher_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工号"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="输入工号"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_teacher_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_student_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="输入学号"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_student_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="输入身份证号"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_id_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="电话号码"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="设置邮箱"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="1"
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主页"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:autoLink="web"
                        android:hint="个人主页地址"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:inputType="textUri"
                        android:textColor="?android:attr/textColorSecondary"
                        android:id="@+id/edit_homepage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        style="@style/personal_homepage_edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="填写地址"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:id="@+id/edit_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>

                <LinearLayout

                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人介绍"
                        style="@style/personal_homepage_edit_style"></TextView>

                    <com.andreabaccega.widget.FormEditText
                        android:hint="填写个人介绍 (500字以内)"
                        android:maxLength="500"
                        style="@style/personal_homepage_edit_style"
                        android:background="@null"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="5"
                        android:id="@+id/edit_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:emptyErrorString="@string/CANNOT_BE_NULL"></com.andreabaccega.widget.FormEditText>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

<!--    <Button-->
<!--        android:id="@+id/btn_concern"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="确定"></Button>-->


</RelativeLayout>
